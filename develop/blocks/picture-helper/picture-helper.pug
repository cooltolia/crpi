mixin picture-helper(images, lazyload = false)
    if (lazyload)
        picture
            source(
                data-srcset=images.desktop
                media='(min-width: 1280px)'
            )
            source(
                data-srcset=images.tablet
                media='(min-width: 768px)'
            )
            img(
                data-src=images.mobile
                alt=""
            )
    else
        picture
            source(
                srcset=images.desktop
                media='(min-width: 1280px)'
            )
            source(
                srcset=images.tablet
                media='(min-width: 768px)'
            )
            img(
                src=images.mobile
                alt=""
            )
    